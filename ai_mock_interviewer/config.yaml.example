# AI Mock Interviewer Configuration Example
# Copy this file to config.yaml and customize as needed

did:
  api_key: "${DID_API_KEY}"  # Set via environment variable
  base_url: "https://api.d-id.com"
  default_avatar: "amy"  # Options: amy, john, lisa, mark, sarah
  default_voice: "en-US-JennyNeural"  # Microsoft Azure voice ID
  timeout: 90  # Seconds to wait for video generation
  max_retries: 3
  max_concurrent: 3  # Max concurrent video generations

gemini:
  api_key: "${GEMINI_API_KEY}"  # Set via environment variable
  model_name: "gemini-2.0-flash-exp"
  question_generation_temperature: 0.7  # Higher = more creative
  evaluation_temperature: 0.4  # Lower = more consistent
  max_output_tokens: 8192

cache:
  enabled: true
  ttl_days: 30  # Time to live for cached videos
  max_cache_size_mb: 1000  # Max cache size (not enforced yet)
  cleanup_interval_hours: 24  # How often to run cleanup

interview:
  default_num_questions: 8
  min_questions: 3
  max_questions: 15
  default_difficulty: "mid"  # junior, mid, senior
  default_interview_type: "mixed"  # behavioral, technical, mixed
  enable_resume_specific: true

storage:
  storage_type: "sqlite"  # Currently only sqlite supported
  sqlite_path: "./data/interviews.db"
  json_path: "./data/interviews/"  # For future JSON storage
  auto_backup: true
  backup_interval_hours: 24

log_level: "INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
log_file: "./logs/mock_interviewer.log"
